<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_tree" model="ir.ui.view">
        <field name="name">sale_order surcharge</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_order_configurator_view" model="ir.ui.view">
        <field name="name">sale_order form surcharge</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_product_configurator.sale_order_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='product_template_id']" position="attributes">
                <attribute name="column_invisible">[('parent.state', 'in', ['sale', 'done'])]</attribute>
            </xpath>
            <xpath expr="//tree/field[@name='product_id']" position="attributes">
                <attribute name="invisible">0</attribute>
                <attribute name="string">Variante</attribute>
                <attribute name="optional">hide</attribute>
            </xpath>
        </field>
    </record>
</odoo>
