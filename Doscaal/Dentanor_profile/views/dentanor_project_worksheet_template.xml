<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="dentanor_worksheet_form" model="ir.ui.view">
        <field name="name">dentanor_worksheet surcharge</field>
        <field name="model">dentanor.project_worksheet_template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="x_task_id" invisible="1"/>
                            <field name="x_name" invisible="1"/>
                            <field name="supplier_id"/>
                            <field name="product_id"/>
                            <field name="lot_id" domain="[('product_id', '=', product_id)]"/>
                            <field name="move_product_id" domain="[('categ_id.is_move_product', '=', True)]"/>
                            <field name="is_forfait" invisible="1"/>
                            <field name="distance" attrs="{'invisible': [('is_forfait', '=', True)]}"/>
                        </group>
                        <group>
                            <field name="photo" widget="image"/>
                            <field name="signature" widget="signature"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="x_comments" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>

